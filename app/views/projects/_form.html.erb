<%= form_with model: project, class:"max-w-lg mx-auto bg-white p-6 mt-12 rounded-lg border border-blue-400 shadow-md" do |form| %>
<h2 class="text-2xl font-semi-bold text-center mb-4 text-gray-800">Create a Project</h2>
  
  <div class="mb-4">
    <%= form.label :name, class: "text-gray-700 font-medium mb-1 block" %>
    <%= form.text_field :name, class:"w-full border border-gray-300 rounded-lg px-4 py-2 class" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "text-gray-700 font-medium mb-1 block" %>
    <%= form.text_field :description, class:"w-full border border-gray-300 rounded-lg px-4 py-2 class" %>
  </div>

  <div class="mb-4 text-center flex gap-4 items-center mx-auto justify-center">
    <%= form.label :status, class: "text-gray-700 font-medium mb-1 block"  %>
    <%= form.select :status, options_for_select(Project::VALID_STATUS, form.object.status) %>
  </div>

  <div>
    <%= form.submit "Create Project", class:"text-white px-4 py-2 bg-blue-600 rounded-md hover:bg-blue-700" %>
  </div>
<% end %>
